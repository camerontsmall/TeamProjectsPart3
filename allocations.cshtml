@{
    Layout = "~/_SiteLayout.cshtml";
    Page.Title = "Contact";

}


    <div id='main-content' class="container-fluid">

        <div class="panel panel-default">
            <div class="panel-body">
                <span class="h2">Room Allocations</span> <span class="h4">- <a href="help.php">Click for help on this page!</a></span>
                <hr>
                <div class="row">
                    <label class='col-md-1 control-label text-right' for='parkFilter'>Degree Part</label>
                    <div id='parkFilter' class='col-md-3'>
                        <select id="part-filter" name="part-filter" class="form-control">
                            <option value="-">-</option>
                            <option value="A">A</option>
                            <option value="B">B</option>
                            <option value="C">C</option>
                        </select>
                    </div>
                    <label class='col-md-1 control-label text-right' for='filterRequest'>Filter Request Type</label>
                    <div id='filterRequest' class="col-md-3">
                        <select id="filter" name="filter" class="form-control">
                            <option value="all">All Requests</option>
                            <option value="approved">Approved Requests</option>
                            <option value="nonprefered">Non-prefered Room Requests</option>
                            <option value="pending">Pending Requests</option>
                            <option value="rejected">Rejected Requests</option>
                        </select>
                    </div>



                    <label class='col-md-1 control-label text-right' for="search-select">Search</label>
                    <div id='search-select' class='col-md-3'>
                        <div class='input-group'>
                            <span class='input-group-btn'>

                            </span>
                            <input id='searchString' maxlength='10' type='text' class='form-control' placeholder='Search Module Code'></input>
                            <span class='input-group-btn'>

                                <button class='btn btn-secondary' id='removebtn' type='button'><span class='glyphicon glyphicon-remove'><span></button>
                            </span>
                        </div>

                    </div>
                </div>
                <hr>
                <div class="table-responsive">
                    <table id='allocation-table' class="table table-bordered table-condensed">
                        <thead>
                            <tr>
                                <th style="cursor: pointer;" class='' onclick=''>Request Number <span></span></th>
                                <th style="cursor: pointer;" id='reqStatus' class='' onclick=''>Request Status <span></span></th>
                                <th style='display:none;'>Department</th> <!-- Hidden column -->
                                <th style="cursor: pointer;" class='' onclick='' id='moduleCode'>Module<span></span></th>
                                <th style="cursor: pointer;" class='' onclick=''>Semester <span></span></th>
                                <th style="cursor: pointer;" class='' onclick=''>Start Week <span></span></th>
                                <th style="cursor: pointer;" class='' onclick=''>End Week <span></span></th>
                                <th style="cursor: pointer;" class='' onclick=''>Day <span></span></th>
                                <th style="cursor: pointer;" class='' onclick=''>Period (1-9) <span></span></th>
                                <th style="cursor: pointer;" class='' onclick=''>Length (Hours) <span></span></th>
                                <th style="cursor: pointer;" class='' onclick=''>Priority <span></span></th>
                                <th style="cursor: pointer;" class='' onclick=''>Number Of Students <span></span></th>
                                <th style="cursor: pointer;" class='' onclick=''>Park <span></span></th>
                                <th style="cursor: pointer;" class='' onclick=''>Number of Rooms <span></span></th>
                                <th style="cursor: pointer;" class='' onclick=''>Preference <span></span></th>
                                <th style="cursor: pointer;" class='' onclick=''>Lecture/Seminar (L/S) <span></span></th>
                                <th style="cursor: pointer;" class='' onclick=''>Fixed Data Projector <span></span></th>
                                <th style="cursor: pointer;" class='' onclick=''>Number of Projectors <span></span></th>
                                <th style="cursor: pointer;" class='' onclick=''>Visualiser <span></span></th>
                                <th style="cursor: pointer;" class='' onclick=''>Special Requirements <span></span></th>
                                <th style="cursor: pointer;" class='' onclick=''>Group Number <span></span></th>
                                <th style="cursor: pointer;" class='' onclick=''>Room Granted <span></span></th>
                                <th id='rq'><span style="white-space: nowrap;">Request Settings</span></th>
                            </tr>
                        </thead>
                        <tbody>
                            


                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
