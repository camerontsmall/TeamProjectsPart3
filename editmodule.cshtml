<div id='main-content' class="container-fluid">
    <div class="container-fluid">
        <div class="panel panel-default">
            <div class="panel-body">
                <form name='moduleform' id='moduleform' action='modulechangepost.php' method='post' onsubmit='return validateForm()' class="form-horizontal">
                    <fieldset>
                        <span class="h2">Edit Module Details</span> <span class="h4">- <a href="help.php">Click for help on this page!</a></span>

                        <hr>
                        <h2 class="text-center">Current module details</h2>
                        <div class="form-group">
                            <label class="col-md-4 control-label" for="departmentName">Department <span style="font-size:1.25em;color:red;">*</span></label>
                            <div class="col-md-4">
                                <input id="firstSelect" name="dept" class="form-control" placeholder="" disabled>

                                </input>
                            </div>
                        </div>

                        <div class="form-group">
                            <label class="col-md-4 control-label" for="moduleCode">Module Details <span style="font-size:1.25em;color:red;">*</span></label>
                            <div class="col-md-4" id="secondSelect">
                                <select id="module-details" name="module" class="form-control" required="">

                                    <option disabled selected style="display:none;"></option>


                                </select>

                                </select>
                            </div>
                        </div>


                        <hr>
                        <h2 class="text-center">New module details</h2>
                        <div class="form-group">
                            <label class="col-md-4 control-label" for="departmentName">Department <span style="font-size:1.25em;color:red;">*</span></label>
                            <div class="col-md-4">
                                <input id="firstSelect" name="dept" class="form-control" placeholder="" disabled>

                                </input>
                            </div>
                        </div>

                        <div class="form-group">
                            <label class="col-md-4 control-label" for="moduleCode">Module Code <span style="font-size:1.25em;color:red;">*</span></label>
                            <div class="col-md-4">

                                <input id="newModuleCode" name="moduleCode" type="text" value="" class="form-control input-md" required="">
                                </select>

                            </div>
                        </div>

